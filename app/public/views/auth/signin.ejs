<% layout('/layouts/master') -%>

<div style="height: 40px;"></div>
<div class="text-center bg-light p-2">
	<% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
	<h2 class="text-primary mb-2">Signin</h2>
		<form action="/signin" method="post" class="col-12 col-sm-12 col-md-12 col-lg-12" enctype="application/x-www-form-urlencoded">
		  <div class="form-group">
			    <label for="email">Email Address</label>
			    <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email">
		  </div>
		  <div class="form-group">
			    <label for="password">Password</label>
			    <input type="password" class="form-control" name="password" id="password" placeholder="Password">
		  </div>
		  <button type="submit" class="btn btn-success btn-block">Signin</button>
		</form>
</div>